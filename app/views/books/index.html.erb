<h1>&nbsp; &nbsp;Listing Books</h1>
<style>
  table,th,td
{
border:1px solid black;
}
</style>

<table>
  <tr>
    <th>Book name</th>
    <th>Author</th>
    <th>Publisher</th>
    <th>Published</th>
    <th>Genre</th>
    <th>Book</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.book_name %></td>
    <td><%= book.author %></td>
    <td><%= book.publisher %></td>
    <td><%= book.published %></td>
    <td><%= book.genre %></td>
    <td><%= book.book_id %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure you want to delete this book?' } %></td>
  </tr>
<% end %>
</table>


